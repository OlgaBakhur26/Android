<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parentContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"/>

    <com.example.customview.CustomView
        android:id="@+id/customView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:radiusOuterCircle="@dimen/radiusOuterCircle"
        app:radiusInnerCircle="@dimen/radiusInnerCircle"
        app:colorInnerCircle="@color/colorInnerCircle"
        app:colorRightBottomSector="@color/colorRightBottomSector"
        app:colorLeftBottomSector="@color/colorLeftBottomSector"
        app:colorLeftTopSector="@color/colorLeftTopSector"
        app:colorRightTopSector="@color/colorRightTopSector"/>

</LinearLayout>