<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="@dimen/frameMargin"
    android:paddingEnd="@dimen/frameMargin">

<de.hdodenhof.circleimageview.CircleImageView
    android:id="@+id/viewItemFlag"
    android:layout_width="0dp"
    android:layout_height="@dimen/item_image_size_list_activity"
    tools:src="@drawable/tunisian"
    android:background="@android:color/transparent"
    app:civ_border_width="5dp"
    app:civ_border_color="@color/itemArea_strokeColor"
    android:elevation="@dimen/item_elevation"
    android:layout_margin="@dimen/item_margin"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintRight_toLeftOf="@id/viewDishName"/>

<TextView
    android:id="@+id/viewDishName"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:fontFamily="sans-serif"
    android:textColor="@color/colorPrimaryDark"
    android:textSize="@dimen/big_text_size"
    tools:text="Dish name"
    style="@style/ItemList_TextStyle"
    app:layout_constraintLeft_toRightOf="@id/viewItemFlag"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>