<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

   <ImageView
       android:id="@+id/viewIcon"
       android:layout_width="@dimen/items_icon_size"
       android:layout_height="@dimen/items_icon_size"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintRight_toLeftOf="@id/viewTime"
       app:layout_constraintBottom_toBottomOf="parent"/>

   <TextView
       android:id="@+id/viewTime"
       android:layout_width="0dp"
       android:layout_height="match_parent"
       style="@style/itemWeatherTextStyle"
       app:layout_constraintLeft_toRightOf="@id/viewIcon"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintRight_toLeftOf="@id/viewDescription"
       app:layout_constraintBottom_toBottomOf="parent"/>

   <TextView
       android:id="@+id/viewDescription"
       android:layout_width="0dp"
       android:layout_height="match_parent"
       style="@style/itemWeatherTextStyle"
       app:layout_constraintLeft_toRightOf="@id/viewTime"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintRight_toLeftOf="@id/viewTemperature"
       app:layout_constraintBottom_toBottomOf="parent"/>

   <TextView
       android:id="@+id/viewTemperature"
       android:layout_width="0dp"
       android:layout_height="match_parent"
       style="@style/itemWeatherTextStyle"
       app:layout_constraintLeft_toRightOf="@id/viewDescription"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>