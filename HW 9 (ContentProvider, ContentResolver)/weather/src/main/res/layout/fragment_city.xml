<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/viewCityList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:paddingStart="@dimen/items_city_sides_padding"
        android:paddingEnd="@dimen/items_city_sides_padding"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingButtonAddCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:src="@drawable/ic_floating_button_add_city"
        android:backgroundTint="@color/floatingButtonColor"
        app:fabCustomSize="@dimen/fabCustomSize"
        app:elevation="@dimen/floating_button_elevation_size"
        android:layout_margin="24dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>








